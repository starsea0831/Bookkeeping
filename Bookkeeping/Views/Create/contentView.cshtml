@model List<ShowViewModels> 

<div class="row">
	<div class="col-md-12">
		<table class="table table-bordered table-hover">
			<tr>
				<th>#</th>
				<th>類別</th>
				<th>日期</th>
				<th>金額</th>
			</tr>
			@{
				int i = 1;
				foreach (ShowViewModels element in Model)
				{
					<tr>
						<td>@i</td>
						<td>@element.Kind</td>
						<td>@element.Date</td>
						<td>@element.Money</td>
					</tr>
					i++;
				}
			}


		</table>
	</div>
</div>