@model List<BookViewModel> 

<div class="row">
	<div class="col-md-12">
		<table class="table table-bordered table-hover">
			<tr>
				<th>#</th>
				<th>類別</th>
				<th>日期</th>
				<th>金額</th>
			</tr>
			@{
				int i = 1;
				foreach (BookViewModel element in Model)
				{
					<tr>
						<td>@i</td>
						@if (element.Kind == 0)
						{
							<td><font color="blue">支出</font></td>
						}
						else
						{
							<td><font color="red">收入</font></td>
						}
						<td>@element.Date</td>
						<td>@element.Money</td>
					</tr>
					i++;
				}
			}


		</table>
	</div>
</div>